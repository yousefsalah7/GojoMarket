@model IEnumerable<Product>

<form method="post">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container row w-auto">
            <div class="col -8">
                <div class="card mt-4 w-auto">
                    <div class="card-header bg-dark text-light m-0 w-auto row container">
                        <div class="col-6">
                            <i class="fa fa-shopping-cart"></i> &nbsp;
                            Shopping Cart
                        </div>
                        <div class="col-6 text-end">
                            <a class="btn btn-outline-info btn-sm" asp-controller="Home" asp-action="Index" >Continue Shopping</a>
                        </div>
                    </div>
                    <div class="card-body w-auto">
                        <div class=" d-none d-lg-block">
                            <div class="row" style="color:#821f3d">
                                <div class="col-lg-2">
                                </div>
                                <div class="col-12 col-lg-7 fw-bolder text-danger">
                                    Product Details
                                </div>
                                <div class="col-12 col-lg-2 fw-bolder text-danger">
                                    Price per sqft
                                </div>
                                <div class="col-6 col-sm-4 col-lg-1">
                                </div>
                            </div>
                        </div>

                        <hr />
                        @if (Model.Count()>0)
                        {
                        @foreach (var item in Model)
                        {
                            
                        <div class="row h-100">
                            <div class="col-4 col-md-2 text-center py-2">
                                <img src="@WC.imagePath@item.Image" class="rounded" width="100%" />
                            </div>
                            <div class="col-12 py-3 col-lg-7">
                                <h5>@item.Name</h5>
                                <div style="font-size:11px;">@Html.Raw(@item.Description)</div>
                            </div>
                            <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                <span style="font-size:17px;"> @item.Price.ToString("c")</span>/ sqft

                            </div>
                            <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                                <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Cart" asp-route-Id="@item.Id">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                        }
                            
                        }else{
                            <h1 class="text-center text-capitalize text-danger "> No Items in your Cart &nbsp; <i class="fa-solid fa-handshake"></i></h1>
                        }
                        <hr />
                    </div>
                    <div class="card-footer w-auto">
                        <div class="row">
                            <div class="col-6 col-md-3 offset-md-9">
                                <button type="submit" class="btn btn-success form-control "  >
                                    <span>Continue</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
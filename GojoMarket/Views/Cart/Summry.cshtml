@model GojoMarket.Models.ViewModels.UserProductVM
<form method="post" >
    <br />
    <div class="backgroundWhiteBorder  " >
        <div class="container w-100 ">
            <div class="card w-100 ">
                <div class="card-header bg-dark text-light container ">
                    <div class="row">
                        <div class="col  w-auto py-1 fs-5 fw-bolder  ">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Order Summary
                        </div> 
                        <div class="col text-end ">
                        <a class="btn btn-outline-info " asp-action="Index" asp-controller="Cart">Back to Cart</a>
                        </div>

                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-7 pb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info fw-bolder font-monospace ">User Details:</span>
                                    </h4>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Name</label>
                                    </div>
                                    <div class="col-9">
                                        <input type="text" asp-for="@Model.applicationUser.Firstname" class="form-control" disabled />

                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Phone</label>
                                    </div>
                                    <div class="col-9">
                                        <input type="text" disabled asp-for="@Model.applicationUser.PhoneNumber" class="form-control" />
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Email</label>
                                    </div>
                                    <div class="col-9">
                                        <input type="text" disabled asp-for="@Model.applicationUser.Email" class="form-control" />
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-5 row">
                                <div class="col-12">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Order Summary:</span>
                                    </h4>
                                    <ul class="list-group mb-3">
                                        @foreach (var item in Model.products)
                                        {
                                            <li class="list-group-item d-flex justify-content-between">
                                            <div>
                                                <h6 class="my-0 p-1">@item.Name</h6> &nbsp;<img src="@WC.imagePath@item.Image" class="w-25"  /> 
                                                <small class="text-muted">Price per Sqft: @item.Price.ToString("c")</small>
                                            </div>
                                            </li>
                                        }
                                        
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-5 offset-md-7">
                            <button type="submit"  class="btn btn-primary form-control">Submit Inquiry</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
@model GojoMarket.Models.Category


<form method="post" asp-action="Create">
    <div class="border p-2">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-select-lg row">
            <h2 class="text-info px-1 ">
                Add New Categroy
            </h2>
            <div class="row mt-2">
                <div class="col-8">
                    <div class="form-group row  mt-2">
                        <div class="col-4">
                            <label asp-for="Name"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group row  mt-2">
                        <div class="col-4">
                            <label asp-for="NumOfOrders"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="NumOfOrders" class="form-control" />
                            <span asp-validation-for="NumOfOrders" class="text-danger"></span>

                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4 row mt-4">

                            <div class="col">
                                <input type="submit" class="btn btn-outline-primary w-100" value="Create" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-outline-success w-100">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    @* Keep this empty *@
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts{

<partial name="_ValidationScriptsPartial" />
}
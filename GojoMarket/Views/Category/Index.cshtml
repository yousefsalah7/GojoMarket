@model IEnumerable<GojoMarket.Models.Category>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary"> Categrios List  </h2>
            </div>
            <div class="col-6  text-end ">
                <a class="btn btn-primary" asp-controller="Category" asp-action="Create" >
                <i class="fa-solid fa-plus"></i> &nbsp; Create New Category
            </a>
            </div>

        </div>
        <br /> <br />
    @if(Model.Count()>0) { 
            <table class=" table table-bordered table-striped" style="width:100%">
                <thead class="text-center">
                    <tr >
                        <th>
                            Category Name 
                        </th>
                    <th>
                        NumOfOrders
                    </th>
                    <th>
                        OPtions
                    </th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td width="40%">
                                @item.Name
                            </td>
                        <td width="20%">
                            @item.NumOfOrders
                            </td>
                            <td class="text-center">
                                <div class="btn-group w-75" role="group">
                                <a asp-controller="Category" asp-action="Edite" asp-route-Id="@item.Id" class="btn btn-outline-primary"> <i class="fa-solid fa-user-pen"></i> &nbsp; Edite </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-outline-danger mx-1"> <i class="fa-solid fa-trash"></i> &nbsp; Delete</a>

                            </div>

                            </td>
                    </tr>
                        
                    }
                </tbody>
            </table>
    }
    else{
       <h1 class="text-danger "> There is no Categrios</h1>
    }
</div>

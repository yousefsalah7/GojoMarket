@model GojoMarket.Models.ViewModels.HomeVM

<div class="container">
    <div class="text-center p-3">
        <button class="btn btn-outline-dark filter-button" data-filter="all" >All</button>
        @foreach (var item in Model.categories)
        {
            <button class="btn btn-outline-secondary filter-button " data-filter="@item.Id">@item.Name</button>
        }

    </div>
    <br />
    <div class="row">
        @foreach (var item in Model.products)
        {
            <partial name="_individualProductCard" model="item" />
        }

    </div>
</div>

@section Scripts
{
<script>
    $(document).ready(function(){

    $(".filter-button").click(function(){

        var value = $(this).attr('data-filter');
        if(value == "all")
        {
            $('.filter').show('1000');
        }
        else
        {
            $(".filter").not('.'+value).hide('3000');
            $('.filter').filter('.'+value).show('3000');
            
        }
    });

});
</script>
} 